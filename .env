# BarberFlow example environment variables

# Client Firebase (public) - required for browser SDK
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Site URL (used by server routes as fallback)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Use o emulador local do Firebase para testes end-to-end (true/false)
NEXT_PUBLIC_USE_FIREBASE_EMULATOR=true

# Emulador hosts/ports (opcional — os defaults são usados se não forem definidos)
NEXT_PUBLIC_FIRESTORE_EMULATOR_HOST=localhost
NEXT_PUBLIC_FIRESTORE_EMULATOR_PORT=8080
NEXT_PUBLIC_FIREBASE_AUTH_EMULATOR_URL=https://stargoldtecnology.cloud/barberflow
NEXT_PUBLIC_FIREBASE_STORAGE_EMULATOR_HOST=localhost
NEXT_PUBLIC_FIREBASE_STORAGE_EMULATOR_PORT=9199

# Server secrets (dev) — coloque valores reais somente em ambiente seguro
MP_ACCESS_TOKEN=
